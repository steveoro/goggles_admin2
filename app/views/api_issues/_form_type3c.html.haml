.row
  %h5.py-2= t('issues.possible_fix')
%section#fix-details
  .row
    .col-3.text-right
      %code first_name
    .col
      #{req['type3c_first_name']}
  .row
    .col-3.text-right
      %code last_name
    .col
      #{req['type3c_last_name']}
  .row
    .col-3.text-right
      %code year_of_birth
    .col
      #{req['type3c_year_of_birth']}
  .row
    .col-3.text-right
      %code gender_type_id
    .col
      #{req['type3c_gender_type_id']}
.row
  %p &nbsp;
.row
  .col
    = render(partial: 'filtered_swimmers_list', locals: { title: t('issues.type2b1.filtered_swimmers_list',
             name: user['last_name']), filtered_swimmers: user_named_swimmers,
             row_swimmer_id: user['swimmer_id'] })
  .col
    = render(partial: 'filtered_swimmers_list', locals: { title: t('issues.type2b1.filtered_swimmers_list',
             name: req['type3c_last_name']), filtered_swimmers: same_named_swimmers,
             row_swimmer_id: user['swimmer_id'] })

%section#form-bottom-toolbar
  .container
    .row.my-4
      .col.text-center
        = render(partial: 'form_type3_swimmer_id', locals: { issue_id: issue_id, swimmer_id: user['swimmer_id'],
                 processable: processable })
      .col.text-center
        = render(partial: 'form_bottom_status_buttons', locals: { issue_id: issue_id, status: status })
