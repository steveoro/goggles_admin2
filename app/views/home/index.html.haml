.wrapper-body
  .spacer-left

  .main-content
    .row-fluid.text-center
      %h5
        ðŸ–¥ API Server: #{GogglesDb::AppParameter.config.settings(:framework_urls).api}
        %a.btn.btn-sm.btn-outline-secondary{ href: settings_path }
          %i.fa.fa-cog
    .col
      .row.mb-3
        .offset-lg-0.col-lg-4.offset-md-1.col-md-5.offset-sm-0.col-sm-6.py-2
          %a.btn.card.text-white.bg-info.h-100{ href: stats_path }
            .card-body.bg-info
              .rotate
                %i.fa.fa-line-chart.fa-4x
              %h6.text-uppercase= t('dashboard.stats.title')
              %h1.display-4= @api_uses_count

        .offset-lg-0.col-lg-4.offset-md-1.col-md-5.offset-sm-0.col-sm-6.py-2
          %a.btn.card.text-white.bg-danger.h-100{ href: api_import_queues_path }
            .card-body.bg-danger
              .rotate
                %i.fa.fa-list.fa-4x
              %h6.text-uppercase= t('dashboard.import_queues.title')
              %h1.display-4= @iqs_count

        .offset-lg-0.col-lg-4.offset-md-1.col-md-5.offset-sm-0.col-sm-6.py-2
          %a.btn.card.bg-success.text-white.h-100{ href: api_users_path }
            .card-body.bg-success
              .rotate
                %i.fa.fa-user.fa-4x
              %h6.text-uppercase= t('dashboard.users.title')
              %h1.display-4= @users_count

        .col-12.py-2.mb-4
          .card.text-dark.bg-light-blue.h-100
            .card-body
              .rotate
                %i.fa.fa-cogs.fa-4x
              %h6.text-uppercase= t('dashboard.manage_entities')
              .row.mb-3
                .offset-lg-0.col-lg-4.offset-md-1.col-md-5.offset-sm-0.col-sm-6.py-2
